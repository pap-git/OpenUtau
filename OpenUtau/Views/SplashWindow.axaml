<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="400" Height="180"
        x:Class="OpenUtau.App.Views.SplashWindow"
        Title="SplashWindow"
        Icon="/Assets/open-utau.ico"
        CanResize="False"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="BorderOnly"
        WindowStartupLocation="CenterScreen">
  <Grid>
    <Image x:Name="LogoTypeDark" Height="16" Margin="40,40,0,20"
           VerticalAlignment="Top" HorizontalAlignment="Left"
           Source="/Assets/logotype-w.png" IsVisible="{Binding IsDarkMode}"/>
    <Image x:Name="LogoTypeLight" Height="16" Margin="40,40,0,20"
           VerticalAlignment="Top" HorizontalAlignment="Left"
           Source="/Assets/logotype.png" IsVisible="{Binding !IsDarkMode}"/>
    <TextBlock x:Name="VersionText" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,70,0,20" Text="" />
    <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Margin="40,90,0,20" Text="pap's fork" />
    <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="40,20,0,20" Opacity=".5" Text="https://github.com/pap-git/OpenUtau/" />
    <ProgressBar VerticalAlignment="Bottom" HorizontalAlignment="Stretch"
           IsIndeterminate="True"/>
  </Grid>
</Window>
